<UserControl x:Class="CustomGraphicsRedactor.User_Controls.SaveLoadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomGraphicsRedactor.User_Controls"
             xmlns:tpl="clr-namespace:CustomGraphicsRedactor.User_Controls.Template"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <tpl:SLButton x:Name="SaveButton"
                          Content="Save"
                          SLStatus="Save"/>
            <tpl:SLButton x:Name="LoadButton"
                          Content="Load"
                          SLStatus="Load"/>
            <tpl:SLButton x:Name="ExportButton"
                          Content="Export"
                          SLStatus="Export"/>
        </StackPanel>
    </Grid>
</UserControl>
